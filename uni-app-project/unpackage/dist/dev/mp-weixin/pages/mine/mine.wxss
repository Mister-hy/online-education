
.container-top {
	position: relative;
	height: 480rpx;
	border-radius: 0 0 96rpx 96rpx;
	background-color: #5ccc84;
	margin-bottom: 80rpx;
}
.title-wrapper {
	display: flex;
	align-items: center;
	justify-content: space-between;
	height: 136rpx;
	color: #fff;
	font-size: 32rpx;
}
.title-wrapper .circle {
	font-weight: 500;
}
.login-wrapper {
	height: 152rpx;
	display: flex;
	align-items: center;
}
.login-wrapper .avatar image {
	width: 125rpx;
	height: 125rpx;
	margin-right: 50rpx;
	border-radius: 50%;
}
.login-wrapper .info {
	color: #fff;
	display: flex;
	flex-direction: column;
	padding: 20rpx 0;
}
.login-wrapper .login {
	font-size: 32rpx;
}
.login-wrapper .loginMore {
	font-size: 24rpx;
	margin-top: 24rpx;
}
.action-wrapper {
	position: absolute;
	bottom: -20rpx;
	left: 0;
	right: 0;
	width: 710rpx;
	margin: auto;
	border-radius: 12rpx;
	height: 200rpx;
	background-color: #fff;
	display: flex;
	color: #6c757d;
	font-size: 22rpx;
	box-shadow: 0 1px 5px rgb(0 0 0 / 10%);
}
.action-item {
	width: 25%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.action-item image {
	width: 60rpx;
	height: 60rpx;
	margin-bottom: 10rpx;
}
.container-bottom {
	width: 650rpx;
	height: 364rpx;
	margin: auto;
	background-color: #5ccc84;
}
.container-action {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 20rpx;
	height: 120rpx;
	font-size: 32rpx;
	border-bottom: 2rpx solid #f3f3f3;
	background-color: #ffffff;
}
.action-left {
	display: flex;
	align-items: center;
}
.action-right {
	width: 20rpx;
	height: 32rpx;
}
.icon_fontsize {
	font-size: 50rpx !important;
	margin-right: 16rpx;
}

