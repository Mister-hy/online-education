
.coupon-wrapper {
	width: 100%;
	padding: 0 20rpx;
	white-space: nowrap;
	margin-bottom: 20rpx;
}
.coupon-item {
	display: inline-flex;

	min-width: 310rpx;
	height: 132rpx;
	color: #fff;
	margin-right: 30rpx;
}
.coupon-info {
	padding: 18rpx 28rpx;
	text-align: center;
	background-color: #d39e00;
	border-right: 4rpx dashed #ffffff;
}
.coupon-get {
	width: 116rpx;
	height: 132rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: #ffc107;
	font-size: 28rpx;
}
.coupon-info .price {
	font-size: 32rpx;
}
.coupon-info .content {
	font-size: 24rpx;
}

